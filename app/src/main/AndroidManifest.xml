<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ss_technology.bikeshowroom">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BikeShowroom"
        android:usesCleartextTraffic="true"
        tools:node="merge">
        <activity
            android:name=".Activity.MainScreen_Activity"
            android:theme="@style/Theme.BikeShowroom.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".Activity.Order_Details"
            android:exported="false"
            android:theme="@style/Theme.BikeShowroom.NoActionBar" />
        <activity
            android:name=".Activity.Orders"
            android:exported="false"
            android:label="Orders" />
        <activity
            android:name=".Activity.Order_confirmation"
            android:exported="false"
            android:theme="@style/Theme.BikeShowroom.NoActionBar" />
        <activity
            android:name=".Activity.Place_Order"
            android:exported="false" />
        <activity
            android:name=".Activity.JazzCash"
            android:exported="false"
            android:theme="@style/Theme.BikeShowroom.NoActionBar" />
        <activity
            android:name=".Activity.Wallet"
            android:exported="false" />
        <activity
            android:name=".Activity.JazzCash_Testing"
            android:exported="false"
            android:label="Jazz Cash" />
        <activity
            android:name=".Activity.View_Bike"
            android:exported="false"
            android:label="Bike Details" />
        <activity
            android:name=".Activity.Mechanic_Request"
            android:exported="false" />
        <activity
            android:name=".Activity.Profile"
            android:exported="false" />
        <activity
            android:name=".Activity.About"
            android:exported="false" />
        <activity
            android:name=".Activity.Messages"
            android:exported="false"
            android:label="@string/title_activity_messages"
            android:theme="@style/Theme.BikeShowroom.NoActionBar" />
        <activity
            android:name=".Activity.Contact_US"
            android:exported="false"
            android:label="Contact Us" />
        <activity
            android:name=".Activity.Home"
            android:label="Bike Showroom"
            android:theme="@style/Theme.BikeShowroom.NoActionBar" />
        <activity
            android:name=".Activity.SignUp"
            android:theme="@style/No_Status_Bar" />
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/No_Status_Bar" />
        <activity
            android:name=".Activity.Splash_Screen"
            android:theme="@style/Splash_Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>