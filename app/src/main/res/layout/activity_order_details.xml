<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Activity.Order_Details">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Information"
            android:background="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:text="Order id"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_weight="0"
                    android:id="@+id/order_id"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="-------"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:text="Date"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_weight="0"
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="-------"
                    android:textSize="16sp"/>
            </TableRow>


            <TableRow>
                <TextView
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:text="Amount"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_weight="0"
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="-------"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:text="Type"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_weight="0"
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="-------"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:text="Status"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_weight="0"
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="-------"
                    android:textSize="16sp"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="10dp"
            android:id="@+id/pp_layout"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:text="Advance payment"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_weight="0"
                    android:id="@+id/advance_payment"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="-------"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:text="Installment months"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_weight="0"
                    android:id="@+id/payment_month"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="-------"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:text="Monthly payment"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_weight="0"
                    android:id="@+id/monthly_payment"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="-------"
                    android:textSize="16sp"/>
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20sp"
            android:orientation="horizontal">

        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:id="@+id/bike_details"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_back"
            android:textAllCaps="false"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:text="View order bike"/>

        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/tranBTN"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_back"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Installment"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Installment information"
            android:background="#4CAF50"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="Total"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="Paid"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="Payable"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/total_amt"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="Wel"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/paid_amt"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="Wel"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/remain_amt"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="Wel"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction"
            android:background="#4CAF50"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rec"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.core.widget.NestedScrollView>